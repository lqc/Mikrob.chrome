<div class="blip {{type}}" data-type="{{type}}" data-user="{{user}}" data-blipid="{{id}}" >
  <div class="avatar_box">
    {{#user_avatar_url}}
    <span class="user_avatar"><img alt="Avatar {{username}}" src="{{user_avatar_url}}" /></span>
    {{/user_avatar_url}}
    {{#recipient_avatar_url}}
    <span class="recipient_avatar"> <img alt="Avatar {{recipientname}}" src="{{recipient_avatar_url}}" /> </span>
    {{/recipient_avatar_url}}
  </div>
  <div class="body">
    <span class="user">
      <a class="user" href="http://blip.pl/users/{{username}}/dashboard">{{username}}</a>
    </span>
    {{#recipientname}}
      <span class="recipient">
        <a class="recipient" href="http://blip.pl/users/{{recipientname}}/dashboard">{{recipientname}}</a>
      </span>
    {{/recipientname}}
    <span>{{{body}}}</span>
    {{#picture}}
    <span><input type="image" src="assets/picture.png" data-action="picture" data-url="{{picture}}" /></span>
    {{/picture}}
    </div>
  <div class="side">
    <div class="actions">
      <input title="Cytuj"     type="image" src="assets/quote.png"   data-action="quote"   data-url="{{blip_url}}"  />
      <input title="Wiadomość" type="image" src="assets/message.png" data-action="message" data-messagestring="{{message_string}}"  />
      <input title="Link"      type="image" src="assets/link.png"    data-action="link"    data-url="{{blip_url}}"  />
      {{#is_own}}
      <input title="Usuń"      type="image" src="assets/delete.png"  data-action="delete"  data-blipid="{{id}}"  />
      {{/is_own}}
    </div>
    <div class="meta">
      <span class="created_at">{{created_at}}</span>
      &nbsp;
      <span class="transport">{{transport}}</span>
    </div>
  </div>
</div>
