<div class="blip {{type}}" data-type="{{type}}" data-user="{{user}}" data-blipid="{{id}}" >
  <div class="avatar_box">
    {{#user_avatar_url}}
    <span class="user_avatar"><img alt="Avatar {{username}}" src="{{user_avatar_url}}" /></span>
    {{/user_avatar_url}}
    {{#recipient_avatar_url}}
    <span class="recipient_avatar"> <img alt="Avatar {{recipientname}}" src="{{recipient_avatar_url}}" /> </span>
    {{/recipient_avatar_url}}
  </div>
  <div class="body">
    <span class="user">
      <a class="user" href="http://blip.pl/users/{{username}}/dashboard">{{username}}</a>
    </span>
    {{#recipientname}}
      <span class="recipient">
        <a class="recipient" href="http://blip.pl/users/{{recipientname}}/dashboard">{{recipientname}}</a>
      </span>
    {{/recipientname}}
    <span>{{{body}}}</span>
    </div>
  <div class="side">
    <div class="actions">
      <input type="image" src="assets/quote.png" data-action="quote" data-url="{{blip_url}}" title="Cytuj" />
      <input type="image" src="assets/message.png" data-action="message" data-messagestring="{{message_string}}" title="Wiadomość" />
      <input type="image" src="assets/link.png" data-action="link" data-url="{{blip_url}}" title="Link" />
      {{#is_own}}
      <input type="image" src="assets/delete.png" data-action="delete" data-blipid="{{id}}" title="Usuń" />
      {{/is_own}}
    </div>
    <div class="meta">
      <span class="created_at">{{created_at}}</span>
      <span class="transport">{{transport}}</span>
    </div>
  </div>
</div>
